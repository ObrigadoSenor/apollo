{
  "scripts": {
    "dev": "NODE_ENV=development nodemon --watch './**/*.{ts,tsx}' --exec 'ts-node' src/server.ts",
    "dev-gql": "concurrently --kill-others \"yarn gql-generate-watch\" \"yarn dev\"",
    "build": "NODE_ENV=production esbuild './src/server.ts' --platform=node --bundle --minify  --outfile=dist/server.js",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint-format": "yarn lint --fix",
    "prettier": "prettier --write 'src/**/*.{ts,tsx}'",
    "gql-generate": "graphql-codegen --config './src/gql/codegen.yml'",
    "gql-generate-watch": "yarn gql-generate --watch",
    "compile": "yarn gql-generate && yarn build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn prettier"
    }
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.13.3",
    "@graphql-codegen/typescript": "^2.7.3",
    "@graphql-codegen/typescript-resolvers": "^2.7.3",
    "@types/express": "^4.17.14",
    "@types/node": "^18.8.1",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "concurrently": "^7.4.0",
    "esbuild": "^0.15.10",
    "eslint": "^8.24.0",
    "husky": "^8.0.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "apollo-server": "^3.10.2",
    "apollo-server-express": "^3.10.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "graphql": "^16.6.0"
  }
}
